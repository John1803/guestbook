{% extends 'CreedGuestbookBundle::layout.html.twig' %}

{% block body %}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                {{ pagerfanta(messages) }}
            </div><!--/.navbar-collapse -->
        </div>
    </div>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1>Hello, world!</h1>
            <p>This is a template for a simple marketing or informational website. It includes a large callout called the hero unit and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
            <p><a class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
        </div>
    </div>

    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <div class="col-md-12">
                {% block content -%}
                    <div class="row">
                        <div class="col-md-12">
                            {% for message in messages %}
                                <div class="col-lg-12">{{ message.theme }}
                                </div>
                                <div class="row">
                                    <div class="col-md-2"> {{ message.user }}
                                    </div>
                                    <div class="col-md-2"> {{ message.email }}
                                    </div>
                                    <div class="col-md-2"> {{ message.createdAt|date('Y-m-d') }}
                                    </div>
                                </div>
                                    <p class="col-lg-12 well">{{ message.text|truncate(83, '...') }}</p>

                                    <div class="btn-group">
                                        <a class="btn btn-info" href="#">Show</a>
                                        <a class="btn btn-danger" href="#">Delete</a>
                                    </div>

                                <hr/>
                            {% endfor %}

                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>

        <footer>
            <div class="navbar navbar-default navbar-fixed-bottom" role="navigation">

                    <h4 class="col-md-12 text-center"> {{ pagerfanta(messages) }}</h4>


            </div>
        </footer>
    </div> <!-- /container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="../../assets/js/jquery.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
{% endblock %}
